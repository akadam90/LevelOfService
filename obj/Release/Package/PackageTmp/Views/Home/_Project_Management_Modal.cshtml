@model LOS.Models.Project_Mngmnt_Form_Model

<div class="modal fade" tabindex="-1" role="dialog" id="project-mangmnt-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Project Management</h4>
            </div>
            <div class="modal-body">
               <form id="project-mangmnt-form" action="" class="form-horizontal" method="post">
                   <h4>Select one from each category</h4>
                   <div class="container">
                       <div class="row">
                           <div class="col-sm-3"><label for="pm-skills" class="control-label">PM Skills</label></div>
                           <div class="col-sm-3">
                               <select id="pm-skills" class="form-control" name="pm-skills">
                                  @for (var i = 0; i < @Model.skills.Count;i++ )
                                  {
                                      <option id="pm-skill-@Model.skills[i].Id" value="@Model.skills[i].Id">@Model.skills[i].Skill</option>
                                  }
                               </select>
                           </div>
                           <div class="col-sm-3"><label for="pm-expertise" class="control-label">Expertise</label></div>
                           <div class="col-sm-3">
                               <select id="pm-expertise" class="form-control">
                                  @for (var i = 0; i < @Model.expertise.Count; i++)
                                   {
                                     <option id="pm-expertise-@Model.expertise[i].Id" value="@Model.expertise[i].Id">@Model.expertise[i].Expertise</option>
                                    }
                               </select>
                           </div>
                       </div>
                       </br>
                       <div class="row">
                           <div class="col-sm-3"><label for="pm-visibility" class="control-label">Project Visibility</label></div>
                           <div class="col-sm-3">
                               <select id="pm-visibility" class="form-control">
                                   @for (var i = 0; i < @Model.visibilities.Count; i++)
                                   {
                                       <option id="pm-visibility-@Model.visibilities[i].Id" value="@Model.visibilities[i].Id">@Model.visibilities[i].Visibility</option>
                                   }
                               </select>
                           </div>
                           <div class="col-sm-3"><label for="pm-duration" class="control-label">Duration</label></div>
                           <div class="col-sm-3">
                               <select id="pm-duration" class="form-control">
                                @for (var i = 0; i < @Model.durations.Count; i++)
                                {
                                    <option id="pm-duration-@Model.durations[i].Id" value="@Model.durations[i].Id">@Model.durations[i].Duration</option>
                                }
                               </select>
                           </div>
                       </div>
                       </br>
                       <div class="row">
                           <div class="col-sm-3">
                               <label for="pm-service-level" class="control-label">Desired Level of Service</label>                              
                           </div>
                           <div class="col-sm-3">                               
                               <input type="text" class="form-control underline-text" id="pm-service-level" name="" />
                           </div>
                           <div class="col-sm-3">
                               <label for="pm-total" class="control-label">Total Allocation</label>                               
                           </div>
                           <div class="col-sm-3">                               
                               <input type="text" class="form-control underline-text" id="pm-total" name="" />
                           </div>
                       </div>
                       </br>
                       <div class="row">
                           <div class="col-sm-3">
                               <label for="pm-director" class="control-label">Director</label>
                           </div>
                           <div class="col-sm-3">
                               <input type="text" class="form-control underline-text" id="pm-director" name="" />
                           </div>
                           <div class="col-sm-3">
                               <label for="pm-supervisor" class="control-label">Supervisor</label>
                           </div>
                           <div class="col-sm-3">
                               <input type="text" class="form-control underline-text" id="pm-supervisor" name="" />
                           </div>
                       </div>

                       <div class="row">
                           <div class="col-sm-3">
                               <label for="pm-associate-director" class="control-label">Associate Director</label>
                           </div>
                           <div class="col-sm-3">
                               <input type="text" class="form-control underline-text" id="pm-associate-director" name="" />
                           </div>
                           <div class="col-sm-3">
                               <label for="pm-associate" class="control-label">Associate</label>
                           </div>
                           <div class="col-sm-3">
                               <input type="text" class="form-control underline-text" id="pm-associate" name="" />
                           </div>
                       </div>
                   </div>
               </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-primary" id="cal-project-mngmnt-fte">Calculate</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
