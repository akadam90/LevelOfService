@{
    var viewModel = (LOS.Models.LayoutViewModel)ViewBag.MainLayoutViewModel;   
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>   
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")   

    <link href="https://fonts.googleapis.com/css?family=Arima+Madurai" rel="stylesheet"> 
    <link rel="stylesheet" type="text/css" href="~/Content/dataTables.bootstrap.min.css"> 
    <link rel="stylesheet" type="text/css" href="~/Content/dataTables.jqueryui.min.css"> 
    <link rel="stylesheet" type="text/css" href="~/Content/jquery.dataTables.min.css"> 
</head>
<body>             
    <nav class="navbar navbar-custom">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="@Url.Content("~/Images/Starcom_logo_only.png")" id="starcom-logo" class="img-responsive pull-left" />
                <a class="navbar-brand" href="@Url.Action("Index","Home")" style="text-align:center">Level of Service</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">               
                <form id="main-navigation-form">
                    <input type="hidden" id="client-selected" value="0"/>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <select id="input-client" style="margin-top: 0px; background-color: #E37222; color: #DFDCE3; font-weight:bold; height:65px;padding-left:10px;width:120px">
                                <option id="client-0" value="0" selected="selected">Select Client</option>
                                @for (var i = 0; i < viewModel.Clients.Count(); i++)
                                {
                                    <option id="client-@viewModel.Clients[i].Id" value="@viewModel.Clients[i].Id">@viewModel.Clients[i].Client</option>
                                }
                            </select>            
                        </li>
                        <li class="userblock">Welcome Akshada !</li>
                        <li><button type="button" id="log-out-btn" class="log-out-btn">Log Out</button></li>
                    </ul>
                </form>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
  
    <div class="container body-content">
        @RenderBody()                
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("AdditionalScripts", required: false)
    @RenderSection("PartialScripts",false);
</body>
</html>
